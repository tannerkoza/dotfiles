#!/bin/sh

install_oh_my_zsh() {
    # install ohmyzsh and symlink my-aliases.zsh

    sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
    cd .oh-my-zsh/custom/
    ln -s ~/.zsh/my-aliases.zsh .
}

install_thefuck() {
    # install thefuck cli tool
    sudo apt update
    sudo apt install python3-dev python3-pip python3-setuptools
    pip3 install thefuck --user
}

install_oh_my_zsh
install_thefuck
